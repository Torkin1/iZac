<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/TitleTextStyle</item>
    </style>

    <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="Button">
        <item name="android:colorButtonNormal">@color/colorAccent</item>
    </style>
    <style name="NotClickableBorderless">
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="NotClickable" parent="NotClickableBorderless">
        <item name="android:foreground">@drawable/img_468929</item>
    </style>
    <style name="ClickableBorderless">
        <item name="android:background">@color/colorAccent</item>
    </style>
    <style name="Clickable" parent="ClickableBorderless">
        <item name="android:foreground">@drawable/img_468929</item>
    </style>
    <style name="TextView" parent="TextViewBorderLess">
        <item name="android:foreground">@drawable/img_468929</item>
    </style>
    <style name="TextViewBorderLess" parent="NotClickableBorderless">
        <item name="fontFamily">monospace</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextViewLessImportant" parent="NotClickable">
        <item name="android:fontFamily">monospace</item>
        <item name="android:padding">4dp</item>
    </style>
    <style name="ActivityBackground">
        <item name="android:background">@drawable/various_alcohol_bottles_in_a_bar_back_yellow_lighting</item>
    </style>

</resources>
