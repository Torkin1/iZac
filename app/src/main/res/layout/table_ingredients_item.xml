<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivIngredientThumb"
        style="@style/NotClickableBorderless"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/preview"
        app:srcCompat="@drawable/icons8_cocktail_64" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/tvIngredientName"
        style="@style/TextViewBorderLess"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/ingredient" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/tvIngredientQuantity"
        style="@style/TextViewBorderLess"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="quantity" />

</TableRow>